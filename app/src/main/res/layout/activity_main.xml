<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="3dp"
    android:stretchColumns="*">

    <TableRow>

        <EditText
            android:id="@+id/editResult"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_span="4"
            android:background="#000"
            android:focusable="false"
            android:gravity="right|bottom"
            android:padding="5dp"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="50dp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btNull"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginRight="5dp"
            android:layout_span="2"
            android:background="#222222"
            android:text="AC"
            android:textColor="#FFF"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#222222"
            android:text="Del"
            android:textColor="#FFF"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btdiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222"
            android:text="/"
            android:textColor="#FFF"
            android:textSize="30sp" />
    </TableRow>

    <TableRow android:layout_marginTop="5dp">

        <Button
            android:id="@+id/bt7"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginRight="5dp"
            android:background="#464646"
            android:text="7"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#464646"
            android:text="8"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#464646"
            android:text="9"
            android:textColor="#FFF"
            android:textSize="30sp" />


        <Button
            android:id="@+id/btmul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222"
            android:text="*"
            android:textColor="#FFF"
            android:textSize="30sp" />
    </TableRow>

    <TableRow android:layout_marginTop="5dp">

        <Button
            android:id="@+id/bt4"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginRight="5dp"
            android:background="#464646"
            android:text="4"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#464646"
            android:text="5"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#464646"
            android:text="6"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btsub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222"
            android:text="-"
            android:textColor="#FFF"
            android:textSize="30sp" />
    </TableRow>

    <TableRow android:layout_marginTop="5dp">

        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginRight="5dp"
            android:background="#464646"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#464646"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#464646"
            android:text="3"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btsum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222"
            android:text="+"
            android:textColor="#FFF"
            android:textSize="30sp" />
    </TableRow>

    <TableRow android:layout_marginTop="5dp">

        <Button
            android:id="@+id/bt0"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginRight="5dp"
            android:layout_span="2"
            android:background="#464646"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btdot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#222222"
            android:text="."
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btsubmit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222"
            android:text="="
            android:textColor="#FFF"
            android:textSize="30sp" />
    </TableRow>
</TableLayout>